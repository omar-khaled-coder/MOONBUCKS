<div class="container">
  <% if @search_results.present? %>
    <div class="row">
      <% @search_results.each do |product| %>
        <div class="col-sm-6 col-md-6 col-lg-4 col-xl-3 card-listing">
          <%= link_to product_path(product), class: "text-decoration-none" do %>
            <div class="cards-container" id="carouselExampleCaptions" class="carousel slide">
              <div class="hover-card">
                <% if product.photos.attached? %>
                  <%= image_tag product.photos.first.url, class: "image" %>
                <% else %>
                  <%= image_tag "logo.png", class: "image" %>
                <% end %>
              </div>
              <div class="card-description">
                <h3 class="card-title space pt-2"><%= product.name %></h3>
                <p class="card-title space STAR" style="color: black;">
                  <%= product.rating %> <i class="fas fa-star" style="color: black; font-size: 16px;"></i>
                </p>
              </div>
              <div class="card-details justifiy-content-start">
                <%= product.short_description %>
              </div>
              <div class="card-details justifiy-content-end">
                <p class="card-price space" style="color: black; font-size: 16px; margin-bottom: 0px;">
                  Â£ <%= product.price %>
                </p>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <p>No results found for your search query.</p>
  <% end %>
</div>
